package rules;
import models.*;
import java.util.HashSet;
import services.*
import services.ObjectCollectionService;

dialect "mvel"


rule "avoid2"
salience 2
when
    Entity (getValue( "TRAESUB1.VALUE") < 50  )

then
    System.out.println("Too_Cold");


end

rule "President_order"
salience -1
when
    Entity (getValue( "PRESIDENT.Order") == true  )

then
    System.out.println("Attack");



end

rule "is_jet_order"
salience 0
when
    Entity (getValue( "FIGHTERJET.ORDER") == true  )

then
    HashSet<String> set = new HashSet<String>();
    set.add("President.smart");
    set.add("President.Order");
    set.add("President.type");
    set.add("President.value");
    set.add("President.letter");
    Entity e = new Entity("President", set);
    insert(e);


end


